@{
    ViewData["Title"] = "All Movies";
}

@model List<Movies>;


<table class="table table-striped">
    <thead>
        <td>Title</td>
        <td>Year</td>
        <td>Director</td>
        <td>Rating</td>
        <td>Edited</td>
        <td>Lent To</td>
        <td>Copied to Plex</td>
        <td>Notes</td>
    </thead>

    @foreach (var temp in Model)
    {
        <tr>
            <td>@temp.Title</td>
            <td>@temp.Year</td>
            <td>@temp.Director</td>
            <td>@temp.Rating</td>
            <td>@temp.Edited</td>
            <td>@temp.LentTo</td>
            <td>@temp.CopiedToPlex</td>
            <td>@temp.Notes</td>

            <td><a class="btn btn-primary" asp-controller="Home" asp-action="Edit" asp-route-id="@temp.MovieId">Edit</a></td>
            <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@temp.MovieId">Delete</a></td>
        </tr>
        
    }

</table>
